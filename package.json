  "license": "MIT",
  "description": "A simple-to-use Redux persistence library",  
  "repository": {
    "type": "git",
    "url": "https://github.com/brunoccc/redux-manent.git"
  },
  "bugs": {
    "url": "https://github.com/brunoccc/redux-manent/issues"
  },
  "homepage": "https://github.com/brunoccc/redux-manent",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
